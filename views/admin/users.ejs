<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
  <title>Manage Users - Admin</title>
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="/css/admin.css">
</head>
<body class="admin-body">
  <%- include('../partials/nav') %>

  <main class="container admin-container">
    <%- include('../partials/messages') %>

    <div class="admin-header">
      <h1>ğŸ‘¥ Manage Users</h1>
      <a href="/admin/users/create" class="btn btn-primary mobile-btn">â• Add User</a>
    </div>

    <% if (users.length === 0) { %>
      <div class="card">
        <p>No users yet.</p>
        <a href="/admin/users/create" class="btn btn-primary">Add your first user</a>
      </div>
    <% } else { %>
      <div class="admin-list">
        <% users.forEach(user => { %>
          <div class="admin-list-item user-item">
            <% if (user.image_url) { %>
              <div class="user-avatar">
                <img src="<%= user.image_url %>" alt="<%= user.name %>">
              </div>
            <% } else { %>
              <div class="user-avatar avatar-placeholder">
                <%= user.avatar || 'ğŸ‘¤' %>
              </div>
            <% } %>
            <div class="item-info">
              <div class="item-title"><%= user.name %></div>
              <div class="item-meta">
                â­ <%= user.balance || 0 %> points
                <% if (user.is_parent) { %>
                  â€¢ ğŸ‘‘ Parent
                <% } %>
              </div>
            </div>
            <div class="item-actions">
              <a href="/admin/users/<%= user.id %>/edit" class="btn btn-small btn-secondary mobile-btn">âœï¸ Edit</a>
              <a href="/admin/users/<%= user.id %>/delete-confirm" class="btn btn-small btn-danger mobile-btn">ğŸ—‘ï¸ Delete</a>
            </div>
          </div>
        <% }); %>
      </div>
    <% } %>

    <div class="admin-footer-actions">
      <a href="/admin" class="btn btn-secondary mobile-btn">â† Back to Admin</a>
    </div>
  </main>

  <%- include('../partials/footer') %>
</body>
</html>
