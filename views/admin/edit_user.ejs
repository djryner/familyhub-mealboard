<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
  <title>Edit User - Admin</title>
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="/css/admin.css">
</head>
<body class="admin-body">
  <%- include('../partials/nav') %>

  <main class="container admin-container">
    <%- include('../partials/messages') %>

    <h1>‚úèÔ∏è Edit User: <%= user.name %></h1>

    <div class="admin-form-card">
      <form method="POST" action="/admin/users/<%= user.id %>/edit" enctype="multipart/form-data" class="admin-form">
        <div class="form-group">
          <label for="name">Name *</label>
          <input type="text" id="name" name="name" value="<%= user.name %>" required placeholder="e.g., John Doe" class="mobile-input">
        </div>

        <div class="form-group">
          <label for="userImage">Profile Picture</label>
          <div class="image-upload-container">
            <div class="image-preview" id="imagePreview">
              <% if (user.image_url) { %>
                <img src="<%= user.image_url %>" alt="<%= user.name %>">
              <% } else { %>
                <span class="preview-placeholder"><%= user.avatar || 'üë§' %></span>
              <% } %>
            </div>
            <input type="file" id="userImage" name="userImage" accept="image/*" class="mobile-input file-input" onchange="previewImage(event)">
            <p class="help-text">Upload a new photo to replace the current one (JPEG, PNG, GIF, or WebP, max 5MB)</p>
            <% if (user.image_url) { %>
              <label class="checkbox-label">
                <input type="checkbox" id="removeImage" name="removeImage" value="1">
                <span>Remove current photo</span>
              </label>
            <% } %>
          </div>
        </div>

        <div class="form-group">
          <label class="checkbox-label">
            <input type="checkbox" id="isParent" name="isParent" value="1" <%= user.is_parent ? 'checked' : '' %>>
            <span>Parent (has admin privileges)</span>
          </label>
        </div>

        <div class="form-actions mobile-actions">
          <button type="submit" class="btn btn-primary mobile-btn">Save Changes</button>
          <a href="/admin/users" class="btn btn-secondary mobile-btn">Cancel</a>
        </div>
      </form>
    </div>
  </main>

  <script>
    function previewImage(event) {
      const preview = document.getElementById('imagePreview');
      const file = event.target.files[0];
      const removeCheckbox = document.getElementById('removeImage');
      
      if (file) {
        const reader = new FileReader();
        reader.onload = function(e) {
          preview.innerHTML = '<img src="' + e.target.result + '" alt="Preview">';
        };
        reader.readAsDataURL(file);
        
        // Uncheck remove image if user is uploading a new one
        if (removeCheckbox) {
          removeCheckbox.checked = false;
        }
      }
    }

    // Handle remove image checkbox
    const removeCheckbox = document.getElementById('removeImage');
    if (removeCheckbox) {
      removeCheckbox.addEventListener('change', function() {
        if (this.checked) {
          const preview = document.getElementById('imagePreview');
          preview.innerHTML = '<span class="preview-placeholder">üë§</span>';
          
          // Clear file input
          const fileInput = document.getElementById('userImage');
          fileInput.value = '';
        }
      });
    }
  </script>

  <%- include('../partials/footer') %>
</body>
</html>
