<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
  <title>Manage Meals - Admin</title>
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="/css/admin.css">
</head>
<body class="admin-body">
  <%- include('../partials/nav') %>

  <main class="container admin-container">
    <%- include('../partials/messages') %>

    <div class="admin-header">
      <h1>ğŸ½ï¸ <%= typeof view !== 'undefined' && view === 'history' ? 'Meal History' : 'Upcoming Meals' %></h1>
      <div style="display: flex; gap: 10px;">
        <a href="/admin/meals/create" class="btn btn-primary mobile-btn">â• Add</a>
        <% if (typeof view !== 'undefined' && view === 'history') { %>
          <a href="/admin/meals" class="btn btn-secondary mobile-btn">â¬…ï¸ Upcoming</a>
        <% } else { %>
          <a href="/admin/meals?view=history" class="btn btn-secondary mobile-btn">ğŸ“œ History</a>
        <% } %>
      </div>
    </div>

    <% if (meals.length === 0) { %>
      <div class="card">
        <p>No meals found.</p>
        <a href="/admin/meals/create" class="btn btn-primary">Add a meal</a>
      </div>
    <% } else { %>
      <div class="admin-list">
        <% meals.forEach(meal => { %>
          <div class="admin-list-item">
            <div class="item-info">
              <div class="item-title"><%= meal.title %></div>
              <div class="item-meta">
                ğŸ“… <%= meal.date %>
                <% if (meal.meal_type) { %>
                  â€¢ <%= meal.meal_type.charAt(0).toUpperCase() + meal.meal_type.slice(1) %>
                <% } %>
              </div>
              <% if (meal.description) { %>
                <div class="item-desc"><%= meal.description %></div>
              <% } %>
            </div>
            <div class="item-actions">
              <a href="/admin/meals/<%= meal.id %>/edit" class="btn btn-small btn-secondary mobile-btn">âœï¸ Edit</a>
              <a href="/admin/meals/<%= meal.id %>/delete-confirm" class="btn btn-small btn-danger mobile-btn">ğŸ—‘ï¸ Delete</a>
            </div>
          </div>
        <% }); %>
      </div>
    <% } %>

    <div class="admin-footer-actions">
      <a href="/admin" class="btn btn-secondary mobile-btn">â† Back to Admin</a>
    </div>
  </main>

  <%- include('../partials/footer') %>
</body>
</html>
