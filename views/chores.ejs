<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Chores - FamilyHub</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <%- include('partials/nav') %>

  <main class="container">
    <%- include('partials/messages') %>

    <h1>ğŸ“‹ Chores</h1>

    <% if (chores.length === 0) { %>
      <p>No upcoming chores! ğŸ‰</p>
    <% } else { %>
      <div class="chores-grid">
        <% chores.forEach(chore => { %>
          <div class="chore-card <%= chore.status === 'completed' ? 'completed' : '' %> <%= chore.status === 'ignored' ? 'skipped' : '' %>">
            <% if (chore.status === 'ignored') { %>
              <h3 style="text-decoration: line-through; opacity: 0.6;"><%= chore.title %></h3>
            <% } else { %>
              <h3><%= chore.title %></h3>
            <% } %>
            <p class="chore-meta">
              <span class="due-date">ğŸ“… <%= chore.dueDate %></span>
              <% if (chore.assignedTo) { %>
                <span class="assigned">ğŸ‘¤ <%= chore.assignedTo %></span>
              <% } %>
              <span class="points">â­ <%= chore.points %> pts</span>
            </p>
            <% if (chore.status === 'ignored') { %>
              <div class="status-badge" style="background: #ffa500; color: white; padding: 5px 10px; border-radius: 5px; display: inline-block;">â­ï¸ Skipped</div>
            <% } else if (chore.status === 'completed') { %>
              <div class="status-badge" style="background: #28a745; color: white; padding: 5px 10px; border-radius: 5px; display: inline-block;">âœ… Completed</div>
            <% } else { %>
              <div class="chore-actions">
                <form method="POST" action="/chores/<%= chore.id %>/complete">
                  <button type="submit" class="btn btn-success">âœ“ Complete</button>
                </form>
                <form method="POST" action="/chores/<%= chore.id %>/ignore">
                  <button type="submit" class="btn btn-warning">Skip</button>
                </form>
              </div>
            <% } %>
          </div>
        <% }); %>
      </div>
    <% } %>
  </main>

  <%- include('partials/footer') %>
</body>
</html>
